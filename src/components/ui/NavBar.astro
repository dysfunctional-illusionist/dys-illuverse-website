<meta charset="UTF-8" />
  <!-- sticks to top of screen -->
<header class="sticky top-0 z-50 bg-black/70 backdrop-blur-md border-b border-white/10">
  <nav class="max-w-screen-xl mx-auto px-4 py-2 hidden md:flex gap-4">
   
    <!-- Desktop Nav -->
      {navItems.map(({ label, type, href, className }, i) => (
        <>
          {type === "text" ? (
            <a href={href} class={className}>{label}</a>
          ) : type === "icon" ? (
            <a href={href} class={className}>
              <img src={label} alt="" class="w-6 h-6" />
            </a>
          ) : null}

          {/* Add divider if not the last item */}
          {i < navItems.length - 1 && (
            <span class= "mx-0 mt-2 text-gray-400/30">âœ¦</span>
          )}
        </>
      ))}
    <DropdownPlay client:load />
  </nav>
  <!-- Mobile -->
  <MobileMenu items={navItems} client:load />

</header>