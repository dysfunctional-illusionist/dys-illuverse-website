---
import ThemeLayout from "@layouts/EEtheme.astro";
import Layout from "@layouts/BaseLayout.astro";
import ProseList from "@components/ui/ProseListEE.jsx";

const prosePosts = [
  { id: 1, title: "glassfin sushi", date: "03-Aug-2025", tags: ["short"], 
  snippet: "Miroslav goes to the seafront for 'groceries', only to catch a reel big problem.",
  linktext: "...and a fisherman."},
  // more posts
];

