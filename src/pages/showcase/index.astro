---
import Layout from "@layouts/CyberBaseLayout.astro";
import Theme from "@layouts/SunsetTheme.astro";
import Skills from "@components/ui/data/SkillsList.jsx";
const stats = [
  { label: "Creative Computing BSc(Eng)(Hons)", value: "2:1 from Queen Mary University of London" },
  { label: "International Baccalaureate", value: "(39) HL Computer Science, Mathematics, Psychology A*AB" },
];

import Accordion from "@components/ui/data/ProjectsAccordion.jsx";

---

<Theme>
	<Layout title="about me.">
        
        <section class="min-h-screen bg-black/40 p-4 rounded-md text-white px-6 py-12 flex flex-col items-center">

        <!-- Content Container with Sidebar -->
        <div class="flex w-full max-w-5xl gap-12">
            <!-- Main Content: Lore + Skills -->
            <div class="flex-1 space-y-12">
                <!-- Lore -->
                <div class="border border-gray-400 rounded-xl p-6 bg-black/50">
                <h2 class="text-2xl font-semibold mb-4">About</h2>
                <p class="mb-4 text-orange-100">
                    Hi! I'm Jess - 
                    I'm a Creative Computing graduate who adores problem solving and learning new things.
                    With a passion for tech and stories alike, I'm always tackling a new challenge.
                    
                </p>
                <p class="mb-4 text-orange-100">
                    My work blends analysis, technical rigor with curiosity and innovation, allowing me to deliver practical, secure, and engaging solutions.
                </p>
                <p class="text-sm text-orange-100/30">
                    For example: this website is built from scratch using Astro, React, GitHub hosting and Netlify deployment :)
                </p>
                </div>

                <!-- Skills -->
                <div class="border border-gray-400 rounded-xl p-6 bg-black/50">
                <h2 class="text-2xl font-semibold mb-4">Skills</h2>
                    <Skills />
                </div>

            </div>

            <!-- Sidebar: Boss Stats -->
            <aside class="w-64 border border-gray-400 rounded-xl p-6 bg-black/50 shrink-0">
                <h2 class="text-2xl font-semibold mb-4">Education & Experience</h2>
                <dl class="grid grid-cols-2 gap-y-3">
                {stats.map((stat) => (
                    <>
                    <dt class="font-bold">{stat.label}</dt>
                    <dd class="text-orange-400">{stat.value}</dd>
                    </>
                ))}
                </dl>
                <br>
                <h2 class="text-sm">Optical Assistant, Specsavers (June 2023-September 2023)</h2>
                <p class="text-sm"> Handled admin, maintained patient records and operated optical pre-test machinery. </p>
                <br>
                <h2 class="text-sm">Retail Assistant, Savers - February 2023-November 2023</h2>
                <p class="text-sm"> Customer service, inventory management and in-store hardware troubleshooting. </p>
            </aside>
        </div>

        <br>

        <div class="w-full max-w-5xl gap-12 border border-gray-400 rounded-xl p-6 bg-black/50">
          <h2 class="text-center text-4xl font-extrabold 
          bg-gradient-to-b from-pink-400/90 via-purple-500/70 to-indigo-600/30 bg-clip-text text-transparent"> Projects </h2>  
          <Accordion client:load />
        </div>
    </section>
	</Layout>
</Theme>